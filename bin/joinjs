#!/usr/bin/env common-node
process.argv.shift();
process.argv.shift();
var flags = {}, arg;
while(arg = process.argv.shift()) {
  if(arg.indexOf('-')) {
    process.argv.unshift(arg);
    break;
  }
  flags[arg.substr(1)] = true;
}
var filename = process.argv.shift();
if(filename) {
  var output = require('../lib/index').joinjs(filename,  process.argv.shift(), flags.o);
  var destination = process.argv.shift();
  if(destination) {
    fs.write(destination, output);
  } else {
    console.log(output);
  }
} else {
  console.log('usage: joinjs dir/main.js');
}